<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AutoProjectActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toolbar_shape"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/Theme.Design.Light"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activate auto-connection to Betternet to Keep you fully protected."
                android:textAllCaps="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Connect on device startup"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Auto-connection to Batternet on device startup"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <RadioButton
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Unsecured Wi-Fi"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Auto-connection to Batternet on device startup"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <RadioButton
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Off"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Your Connection might be unprotected"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <RadioButton
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>